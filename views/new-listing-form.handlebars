{{> nav}}

<div class="container mt-5">
  <form action="" class="unit-full-form">
    <div class="row">
      <div class="col-12">
        {{#each buildings as |building|}}
        <h2 class="address">{{building.street_address}}</h2>
        <hr>
      </div>
    </div>
    <div class="row mt-3">
      <div class="form-group col-3 px-7">
        <label for="building-id">Building ID:</label>
        <input type="text" class="form-control" id="building-id" value={{building.id}} readonly>
        {{/each}}
      </div>
      <div class="form-group col-3 px-6">
        <label for="unit-num">Unit Number:</label>
        <input type="text" class="form-control" id="unit-number">
      </div>
      <div class="col-3 d-flex flex-column px-7">
        <label for="select">Status:</label>
        <select class="custom-select dropdown status">
          <option selected="">Select Status</option>
          <option value="active">Active</option>
          <option value="deposit">Deposit</option>
          <option value="rented">Rented</option>
        </select>
      </div>
      <div class="col-3 d-flex flex-column px-7">
        <label for="select">Type:</label>
        <select class="custom-select dropdown market-as">
          <option selected="">Select Type</option>
          <option value="Apartment">Apartment</option>
          <option value="House">House</option>
          <option value="Townhouse">Townhouse</option>
          <option value="Condo">Condo</option>
          <option value="Co-Op">Co-Op</option>
        </select>
      </div>
    </div>
    <div class="row mt-3">
      <div class="form-group col-3 px-7">
        <label for="op">OP:</label>
        <div class="d-flex align-items-baseline">
          <input type="text" class="form-control" id="op" placeholder="">
          <span class="ml-1">%</span>
        </div>
      </div>
      <div class="form-group col-9">
        <label for="access">Access:</label>
        <input type="text" class="form-control" id="access" placeholder="">
      </div>
    </div>
    <hr>
    <div class="row mt-3">
      <div class="form-group col-4 px-5">
        <label for="move-in">Move In Date:</label>
        <input type="date" class="form-control" id="move-in" placeholder="">
      </div>
      <div class="col-4 d-flex flex-column px-5">
        <label for="select">Lease Term:</label>
        <div class="d-flex align-items-baseline">
          <select class="custom-select dropdown lease-term">
          <option selected="">Select Term</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
          <option value="11">11</option>
          <option value="12">12</option>
          <option value="13">13</option>
          <option value="14">14</option>
          <option value="15">15</option>
          <option value="16">16</option>
          <option value="17">17</option>
          <option value="18">18</option>
          <option value="19">19</option>
          <option value="20">20</option>
          <option value="21">21</option>
          <option value="22">22</option>
          <option value="23">23</option>
          <option value="24">24</option>
          </select>
          <span class="ml-1">months</span>
        </div>
      </div>
      <div class="col-4 d-flex flex-column px-5">
        <label for="select">Gross Rent:</label>
        <div class="d-flex align-items-baseline">
          <span class="mr-1">$</span>
          <input type="text" class="form-control" id="gross" placeholder="">
          <span class="ml-1">.00</span>
        </div>
      </div>
    </div>
    <div class="row mt-3">
      <div class="col-2 d-flex flex-column px-5">
        <label for="concession">Concession:</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <div class="input-group-text">
              <input type="checkbox" aria-label="Concession" class="concession">
            </div>
          </div>
          <select class="custom-select dropdown ml-1 months-free">
            <option selected="">Months Free</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
          </select>
        </div>
      </div>
      <div class="col-2 d-flex flex-column px-5">
        <label for="legal-beds">Bedrooms:</label>
        <select class="custom-select dropdown ml-1 beds">
          <option selected="">Select</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
        </select>
      </div>
      <div class="col-2 d-flex flex-column px-5">
        <label for="full-baths">Full Bath:</label>
        <select class="custom-select dropdown ml-1 full-baths">
          <option selected="">Select</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
        </select>
      </div>
      <div class="col-2 d-flex flex-column px-5">
        <label for="half-baths">Half Bath:</label>
        <select class="custom-select dropdown ml-1 half-baths">
          <option selected="">Select</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
        </select>
      </div>
      <div class="col-2 d-flex flex-column px-5">
        <label for="total-rooms">Rooms:</label>
        <select class="custom-select dropdown ml-1 rooms">
          <option selected="">Select</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
        </select>
      </div>
      <div class="col-2 d-flex flex-column px-5">
        <label for="sqft">Size:</label>
        <div class="d-flex align-items-baseline">
          <input type="text" class="form-control" id="size" placeholder="">
          <span class="ml-1">sqft</span>
        </div>
      </div>
    </div>
    <hr>
    <div class="row d-flex flex-column align-items-center">
      <div class="form-group col-10">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" rows="3"></textarea>
      </div>
    </div>
    <div class="row d-flex flex-column align-items-center">
      <div class="card-footer d-flex justify-content-center col-6  unit-submit">
        <button type="button" class="btn btn-outline-dark col-6 m-2">Cancel</button>
        <button type="submit" class="btn btn-outline-dark col-6 m-2 next-btn">Next</button>
      </div>
    </div>
  </form>

  <form action="" class="building-amenities">
    <div class="row">
      <div class="col-12">
        {{#each buildings as |building|}}
        <h2 class="address">{{building.street_address}} Amenities</h2>
        <hr>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-2 px-5">
        <label for="building-id">Building ID:</label>
        <input type="text" class="form-control" id="building-id-amenities" value={{building.id}} readonly>
        {{/each}}
      </div>
      <div class="col-2 px-5">
        <div class="row">
          <h3>Pets <i class="fas fa-paw"></i></h3>
        </div>
        <div class="row">
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="pets">
            <label class="custom-control-label align" for="pets">Pets Allowed</label>
          </div>
        </div>
      </div>
      <div class="col-2 px-5">
        <div class="row">
          <h3>Outdoor <i class="fab fa-pagelines"></i></h3>
        </div>
        <div class="row d-flex flex-column">
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="roof">
            <label class="custom-control-label align" for="roof">Roof Access</label>
          </div>
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="courtyard">
            <label class="custom-control-label align" for="courtyard">Courtyard</label>
          </div>
        </div>
      </div>
      <div class="col-6 px-5">
        <div class="row d-flex justify-content-center">
          <h3>Building Features <i class="far fa-building"></i></h3>
        </div>
        <div class="row d-flex justify-content-between">
          <div class="col-2 px-5">
            <div class="row d-flex flex-column">
              <div class="custom-control custom-checkbox d-flex align-items-center">
                <input type="checkbox" class="custom-control-input" id="concierge">
                <label class="custom-control-label align" for="concierge">Concierge</label>
              </div>
              <div class="custom-control custom-checkbox d-flex align-items-center">
                <input type="checkbox" class="custom-control-input" id="doorman">
                <label class="custom-control-label align" for="doorman">Doorman</label>
              </div>
            </div>
          </div>
          <div class="col-2 px-5">
            <div class="row d-flex flex-column">
              <div class="custom-control custom-checkbox d-flex align-items-center">
                <input type="checkbox" class="custom-control-input" id="elevator">
                <label class="custom-control-label align" for="elevator">Elevator</label>
              </div>
              <div class="custom-control custom-checkbox d-flex align-items-center">
                <input type="checkbox" class="custom-control-input" id="laundry">
                <label class="custom-control-label align" for="laundry">Laundry</label>
              </div>
            </div>
          </div>
          <div class="col-2 px-5">
            <div class="row d-flex flex-column">
              <div class="custom-control custom-checkbox d-flex align-items-center">
                <input type="checkbox" class="custom-control-input" id="children-playroom">
                <label class="custom-control-label align" for="children-playroom">Children Playroom</label>
              </div>
              <div class="custom-control custom-checkbox d-flex align-items-center">
                <input type="checkbox" class="custom-control-input" id="gym">
                <label class="custom-control-label align" for="gym">Gym</label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <div class="row d-flex justify-content-center">
      <div class="col-2 px-5">
        <div class="row d-flex flex-column">
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="media-room">
            <label class="custom-control-label align" for="media-room">Media Room</label>
          </div>
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="recreation-room">
            <label class="custom-control-label align" for="recreation-room">Recreation Room</label>
          </div>
        </div>
      </div>
      <div class="col-2 px-5">
        <div class="row d-flex flex-column">
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="pool">
            <label class="custom-control-label align" for="pool">Swimming Pool</label>
          </div>
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="line-in-super">
            <label class="custom-control-label align" for="line-in-super">Live-in Super</label>
          </div>
        </div>
      </div>
      <div class="col-2 px-5">
        <div class="row d-flex flex-column">
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="smoke-free">
            <label class="custom-control-label align" for="smoke-free">Smoke Free</label>
          </div>
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="wheelchair-access">
            <label class="custom-control-label align" for="wheelchair-access">Wheelchair Access</label>
          </div>
        </div>
      </div>
      <div class="col-2 px-5">
        <div class="row d-flex flex-column">
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="garage-parking">
            <label class="custom-control-label align" for="garage-parking">Garage Parking</label>
          </div>
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="valet-parking">
            <label class="custom-control-label align" for="valet-parking">Valet Parking</label>
          </div>
        </div>
      </div>
      <div class="col-2 px-5">
        <div class="row d-flex flex-column">
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="bike-room">
            <label class="custom-control-label align" for="bike-room">Bike Room</label>
          </div>
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="cold-storage">
            <label class="custom-control-label align" for="cold-storage">Cold Storage</label>
          </div>
        </div>
      </div>
      <div class="col-2 px-5">
        <div class="row d-flex flex-column">
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="locker">
            <label class="custom-control-label align" for="locker">Locker</label>
          </div>
          <div class="custom-control custom-checkbox d-flex align-items-center">
            <input type="checkbox" class="custom-control-input" id="package-room">
            <label class="custom-control-label align" for="package-room">Package Room</label>
          </div>
        </div>
      </div>
    </div>
      <div class="row d-flex flex-column align-items-center mt-4">
        <div class="card-footer d-flex justify-content-center col-6  unit-submit">
          <button type="button" class="btn btn-outline-dark col-6 m-2">Cancel</button>
          <button type="submit" class="btn btn-outline-dark col-6 m-2 next-btn">Next</button>
        </div>
      </div>
  </form>
</div>