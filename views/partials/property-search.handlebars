          <input class="form-check-input" type="checkbox" value="package_room" id="package_room" disabled>
          <label class="form-check-label" for="package_room">Package Room</label>
        </div>
      </div>
      <button
          type="button"
          class="btn btn-primary mt-5"
          onClick="buildQuery('Building')"
          id="search-buildings"
        >Search Buildings</button>
      </div>
    </div>
  </form>
</section>
