          <label class="form-check-label" for="pets_allowed">Pets Allowed</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="roof" id="roof" disabled>
          <label class="form-check-label" for="roof">Roof</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="courtyard" id="courtyard" disabled>
          <label class="form-check-label" for="courtyard">Courtyard</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="concierge" id="concierge" disabled>
          <label class="form-check-label" for="concierge">Concierge</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="doorman" id="doorman" disabled>
          <label class="form-check-label" for="doorman">Doorman</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="elevator" id="elevator" disabled>
          <label class="form-check-label" for="elevator">Elevator</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="laundry" id="laundry" disabled>
          <label class="form-check-label" for="laundry">Laundry</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="children_playroom" id="children_playroom" disabled>
          <label class="form-check-label" for="children_playroom">Children's Playroom</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="gym" id="gym" disabled>
          <label class="form-check-label" for="gym">Gym</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="media_room" id="media_room" disabled>
          <label class="form-check-label" for="media_room">Media Room</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="recreation_room" id="recreation_roo" disabled>
          <label class="form-check-label" for="recreation_room">Media Room</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="recreation_room" id="recreation_room" disabled>
          <label class="form-check-label" for="recreation_room">Recreation Room</label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="swimming_pool" id="swimming_pool" disabled>
          <label class="form-check-label" for="swimming_pool">Swimming Pool</label>
