<form action='' class='building-amenities hide'>
  <div class='row'>
    <div class='col-12'>
      <h2 class='address'>Amenities</h2>
      <hr />
    </div>
  </div>
  <div class='row'>
    {{! building id }}
    <div class='form-group col-2 px-5'>
      <label for='building-id'>Building ID:</label>
      <span id='building-id-amenities'></span>
    </div>
    {{! pets }}
    <div class='col-2 px-5'>
      <div class='row'>
        <h3>Pets <i class='fas fa-paw'></i></h3>
      </div>
      <div class='row'>
        <div class='custom-control custom-checkbox d-flex align-items-center'>
          <input type='checkbox' class='custom-control-input' id='pets' />
          <label class='custom-control-label align' for='pets'>Pets Allowed</label>
        </div>
      </div>
    </div>
    {{! outdoor }}
    <div class='col-2 px-5'>
      <div class='row'>
        <h3>Outdoor <i class='fab fa-pagelines'></i></h3>
      </div>
      <div class='row d-flex flex-column'>
        <div class='custom-control custom-checkbox d-flex align-items-center'>
          <input type='checkbox' class='custom-control-input' id='roof' />
          <label class='custom-control-label align' for='roof'>Roof Access</label>
        </div>
        <div class='custom-control custom-checkbox d-flex align-items-center'>
          <input type='checkbox' class='custom-control-input' id='courtyard' />
          <label class='custom-control-label align' for='courtyard'>Courtyard</label>
        </div>
      </div>
    </div>
  </div>
  <hr />
  <div class='row d-flex flex-column'>
    {{! features }}
    <div class='row d-flex justify-content-around mb-3'>
      <h3>Building Features <i class='far fa-building'></i></h3>
    </div>
    <div class='row d-flex justify-content-between'>
      <div class='col-2 px-5'>
        <div class='row d-flex flex-column'>
          <div class='custom-control custom-checkbox d-flex align-items-center'>
            <input type='checkbox' class='custom-control-input' id='concierge' />
            <label class='custom-control-label align' for='concierge'>Concierge</label>
          </div>
          <div class='custom-control custom-checkbox d-flex align-items-center'>
            <input type='checkbox' class='custom-control-input' id='doorman' />
            <label class='custom-control-label align' for='doorman'>Doorman</label>
          </div>
        </div>
      </div>
      <div class='col-2 px-5'>
        <div class='row d-flex flex-column'>
          <div class='custom-control custom-checkbox d-flex align-items-center'>
            <input type='checkbox' class='custom-control-input' id='elevator' />
            <label class='custom-control-label align' for='elevator'>Elevator</label>
          </div>
          <div class='custom-control custom-checkbox d-flex align-items-center'>
            <input type='checkbox' class='custom-control-input' id='laundry' />
            <label class='custom-control-label align' for='laundry'>Laundry</label>
          </div>
        </div>
      </div>
      <div class='col-2 px-5'>
        <div class='row d-flex flex-column'>
          <div class='custom-control custom-checkbox d-flex align-items-center'>
            <input type='checkbox' class='custom-control-input' id='children-playroom' />
            <label class='custom-control-label align' for='children-playroom'>Children Playroom</label>
          </div>
          <div class='custom-control custom-checkbox d-flex align-items-center'>
            <input type='checkbox' class='custom-control-input' id='gym' />
            <label class='custom-control-label align' for='gym'>Gym</label>
          </div>
        </div>
      </div>
      <div class='col-2 px-5'>
        <div class='row d-flex flex-column'>
          <div class='custom-control custom-checkbox d-flex align-items-center'>
            <input type='checkbox' class='custom-control-input' id='media-room' />
            <label class='custom-control-label align' for='media-room'>Media Room</label>
          </div>
          <div class='custom-control custom-checkbox d-flex align-items-center'>
            <input type='checkbox' class='custom-control-input' id='recreation-room' />
            <label class='custom-control-label align' for='recreation-room'>Recreation Room</label>
          </div>
        </div>
      </div>
      <div class='col-2 px-5'>
        <div class='row d-flex flex-column'>
          <div class='custom-control custom-checkbox d-flex align-items-center'>
            <input type='checkbox' class='custom-control-input' id='pool' />
            <label class='custom-control-label align' for='pool'>Swimming Pool</label>
          </div>
          <div class='custom-control custom-checkbox d-flex align-items-center'>
            <input type='checkbox' class='custom-control-input' id='line-in-super' />
            <label class='custom-control-label align' for='line-in-super'>Live-in Super</label>
          </div>
        </div>
      </div>

    </div>
  </div>

  <br />

  <div class='row d-flex justify-content-around'>
    <div class='col-2 px-5'>
      <div class='row d-flex flex-column'>
        <div class='custom-control custom-checkbox d-flex align-items-center'>
          <input type='checkbox' class='custom-control-input' id='smoke-free' />
          <label class='custom-control-label align' for='smoke-free'>Smoke Free</label>
        </div>
        <div class='custom-control custom-checkbox d-flex align-items-center'>
          <input type='checkbox' class='custom-control-input' id='wheelchair-access' />
          <label class='custom-control-label align' for='wheelchair-access'>Wheelchair Access</label>
        </div>
      </div>
    </div>
    <div class='col-2 px-5'>
      <div class='row d-flex flex-column'>
        <div class='custom-control custom-checkbox d-flex align-items-center'>
          <input type='checkbox' class='custom-control-input' id='garage-parking' />
          <label class='custom-control-label align' for='garage-parking'>Garage Parking</label>
        </div>
        <div class='custom-control custom-checkbox d-flex align-items-center'>
          <input type='checkbox' class='custom-control-input' id='valet-parking' />
          <label class='custom-control-label align' for='valet-parking'>Valet Parking</label>
        </div>
      </div>
    </div>
    <div class='col-2 px-5'>
      <div class='row d-flex flex-column'>
        <div class='custom-control custom-checkbox d-flex align-items-center'>
          <input type='checkbox' class='custom-control-input' id='bike-room' />
          <label class='custom-control-label align' for='bike-room'>Bike Room</label>
        </div>
        <div class='custom-control custom-checkbox d-flex align-items-center'>
          <input type='checkbox' class='custom-control-input' id='cold-storage' />
          <label class='custom-control-label align' for='cold-storage'>Cold Storage</label>
        </div>
      </div>
    </div>
    <div class='col-2 px-5'>
      <div class='row d-flex flex-column'>
        <div class='custom-control custom-checkbox d-flex align-items-center'>
          <input type='checkbox' class='custom-control-input' id='locker' />
          <label class='custom-control-label align' for='locker'>Locker</label>
        </div>
        <div class='custom-control custom-checkbox d-flex align-items-center'>
          <input type='checkbox' class='custom-control-input' id='package-room' />
          <label class='custom-control-label align' for='package-room'>Package Room</label>
        </div>
      </div>
    </div>
  </div>
  <div class='row d-flex flex-column align-items-center mt-4'>
    <div class='card-footer d-flex justify-content-center col-6 unit-submit'>
      <button type='button' class='btn btn-outline-dark col-6 m-2 cancel-btn'>Cancel</button>
      <button type='submit' class='btn btn-outline-dark col-6 m-2 next-btn'>Next</button>
    </div>
  </div>
</form>