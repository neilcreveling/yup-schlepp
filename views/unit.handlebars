    {{/if}}
    {{#if unit.unit_amenities.water_view}}
        <p><img src="/images/checkmark.jpeg" alt='checkmark' class='amenity-icon'>Water View</p>
    {{/if}}
</section>
<section id='building-amenities'>
    <p>{{unit.building.building_amenities.gym}}</p>
    {{#if unit.building.building_amenities.gym}}
        <p><img src="/images/checkmark.jpeg" alt='checkmark' class='amenity-icon'>Gym</p>
    {{/if}}
</section>
