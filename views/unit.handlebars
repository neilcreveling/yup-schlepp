{{> nav}}
<div id="edit-link">
    <button type="button" class="btn btn-outline-light my-2 my-sm-0" id="edit-listing"><a href="/edit-listing">Edit This
            Listing</a></button>
</div>
<div class="d-flex flex-row flex-wrap">
    <div class="container">
        <div id="primary-info">
            <div class="jumbotron">
                <p class="h2"><strong>{{unit.building.street_address}}, Unit {{unit.unit_num}}</strong></p>
                <hr class="my-4">
                <p class="h4"><strong>General Info</strong></p>
                <p><strong>Status</strong>: {{unit.status}}</p>
                <p>{{unit.building.street_address}}, Unit {{unit.unit_num}}</p>
                <p><strong>Gross Rent</strong>: {{unit.gross_rent}}</p>
                <p><strong>Months Free</strong>: {{unit.months_free}}</p>
                <p><strong>Net Rent</strong>: {{unit.net_rent}}</p>
                <p><strong>Lease Term</strong>: {{unit.lease_term}}</p>
                <p><strong>OP</strong>: {{unit.op}}</p>
                <p><strong>Market As</strong>: {{unit.market_as}}</p>
                <p><strong>Move-in</strong>: {{format_date unit.move_in}}</p>
                <p><strong>Access</strong>: {{unit.access}}</p>
            </div>
        </div>
    </div>
</div>

